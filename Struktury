#include <iostream>

using namespace std;

struct Uczen
{
  char imie[15];
  char nazwisko[25];
  short wiek;
  char klasa[3];
};


int main()
{
    Uczen tab[3];

    for (int i = 0; i< 3;i++)
    {
    cout << "podaj imie : " << endl;
    cin >> tab[i].imie;
    cout << "podaj nazwisko : " << endl;
    cin >> tab[i].nazwisko;
    cout << "podaj wiek : " << endl;
    cin >> tab[i].wiek;
    cout << "podaj klasa : " << endl;
    cin >> tab[i].klasa;
    }
    for (int i = 0; i< 3;i++)
    {
    cout << "imie : " << endl;
    cout <<  tab[i].imie<< endl;
    cout << "nazwisko : " << endl;
    cout << tab[i].nazwisko<< endl;
    cout << "wiek : " << endl;
    cout << tab[i].wiek<< endl;
    cout << "klasa : " << endl;
    cout << tab[i].klasa << endl;
    }

    return 0;
}
